        <activity android:name=".NotificationOrder" />
        <activity android:name=".TimeDate" />
        <activity android:name=".Address" />
        <activity android:name=".MyAddress" />
        <activity android:name=".Live" />
        <activity android:name=".AddProductDetails" />
        <activity android:name=".AddProductCategory" />
        <activity android:name=".Profile" />
