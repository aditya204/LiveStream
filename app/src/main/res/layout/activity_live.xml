<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Live">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/live_categories_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_200"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:paddingHorizontal="20dp"
        android:id="@+id/live_category_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_categories_toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/sweap_gradients"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/live_goto_Search"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_weight="1"
            android:tint="#696969"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/live_gotoLiveCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/videocam_40dp"
            android:layout_weight="1"
            android:tint="@color/baby_pink"
            >
        </ImageButton>
        <ImageButton
            android:padding="12dp"
            android:id="@+id/live_goto_home_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/app_logo_image"
            android:scaleType="fitCenter"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/live_goto_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_notifications_24"
            android:layout_weight="1"
            android:tint="#696969"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/live_goto_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_weight="1"
            android:tint="#696969"
            >
        </ImageButton>








    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>