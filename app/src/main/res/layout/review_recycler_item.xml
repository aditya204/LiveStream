<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:elevation="5dp"
    android:background="@drawable/corner_round_image"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/review_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/productDetailsBlankStarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/review_UserName" />

    <TextView
        android:id="@+id/review_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="User Name"
        android:textColor="#252525"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/review_profile_image"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/productDetailsBlankStarLayout"
        android:layout_width="120dp"
        android:layout_height="20dp"


        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/review_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/review_UserName">

        <ImageView
            android:id="@+id/review_star1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/review_star2"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/review_star3"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/review_star4"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/review_star5"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Reviewed on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_profile_image" />

    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="27 jan 2020"
        app:layout_constraintBottom_toBottomOf="@+id/textView51"
        app:layout_constraintStart_toEndOf="@+id/textView51"
        app:layout_constraintTop_toTopOf="@+id/textView51" />

    <TextView
        android:visibility="gone"
        android:id="@+id/review_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="product name"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"

        android:layout_marginBottom="8dp"
        android:text="review content that is given by the usersreview content
        that is given by the usersreview content that is given by the usersreview
        content that is given by the usersreview content that is given by the users"
        android:textColor="#252525"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_productName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:visibility="gone"

        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="20dp"
        android:text="|"
        app:layout_constraintBottom_toBottomOf="@+id/review_productName"
        app:layout_constraintStart_toEndOf="@+id/review_productName"
        app:layout_constraintTop_toTopOf="@+id/review_productName"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:visibility="gone"

        android:id="@+id/review_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView55"
        app:layout_constraintStart_toEndOf="@+id/textView55"
        app:layout_constraintTop_toTopOf="@+id/textView55"
        app:layout_constraintVertical_bias="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>